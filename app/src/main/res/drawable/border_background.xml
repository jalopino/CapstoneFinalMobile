<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the background color -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Set the border color -->
            <corners android:radius="4dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Content layer with padding -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the content color -->
            <corners android:radius="4dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

</layer-list>